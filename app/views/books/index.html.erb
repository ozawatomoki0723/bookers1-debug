<p id="notice"></p>

<h1>Books</h1>
<%= flash[:book]%>
<table>
    <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
    </tr>
        <% @books.each do |book| %>
        <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
         <td> <%= link_to "show", book_path(book) %></td>
          <td><%= link_to "edit", edit_book_path(book) %></td>
        <td><%= link_to "destroy",book_path(book),method: :delete,data: { confirm: 'Are you shure?' }%></td>
        </tr>
        <%end%>
</table>
<h2>New book</h2>
<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
<h3><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="form-group">
<%= f.label :title %>
<%= f.text_field :title %>
</div>
<div class="form-group">
  <%=f.label :body %>
    <%= f.text_area :body %>
</div><br>
    <div class="action">
    <%= f.submit "Create Book" %>
</div>
<% end %>